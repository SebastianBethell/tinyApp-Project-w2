<!DOCTYPE html>
<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<body>
  <header>
    <% include ./partials/_header %>
  </header>
    <h2> <center>Home Page /urls</center></h2>

  <% if(userList[user_id]){ %>
    <ul>
      <table border="5" width=50% CELLSPACING=5 align=center>
        <thead>
            <th>Long Url</th>
            <th>Short Url</th>
        </thead>
        <tbody align=center>
          <% for (url in urls) { %>
          <tr>
          <td> <%= urls[url].longUrl %></td>
          <td> <%= url %></td>
          <td> <a href='http://localhost:8080/urls/<%= url %>'>Edit</a>
          <td> <form method="POST" action="/urls/<%= url %>/delete">
                  <input type="submit" name="delete" value="Delete Url">
                </form>
          </td>
          </tr>
          <% }; %>
        </tbody>
      </table>
    </ul>
  <% } else{ %>
        <p><a href="http://localhost:8080/login">You are not logged in. Click here to visit login page</a></p><br>
        <p><a href="http://localhost:8080/register">You are not logged in. Click here to visit registration page</a></p>
      <% } %>
    <a href="http://localhost:8080/urls/new">Click here to shorten a new link!</a>
</body>
</html>

